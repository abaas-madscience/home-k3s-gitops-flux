{
  "extends": ["config:recommended"],
  "enabledManagers": ["kubernetes"],
  "kubernetes": {
    "fileMatch": [
      "clusters/.+\\.ya?ml$",
      "infrastructure/.+/helm-release\\.ya?ml$"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": ["helm", "docker"],
      "labels": ["flux-update"],
      "enabled": true,
      "matchPackagePatterns": ["^fluxcd", "^ghcr.io/fluxcd"]
    },
    {
      "matchDatasources": ["helm"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "enabled": true,
      "labels": ["helm-update"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["flux-system/gotk-components.yaml"],
      "matchStrings": ["image: fluxcd/([^:]+):(?<currentValue>[^\\s]+)"],
      "depNameTemplate": "fluxcd/{{{match1}}}",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ]
}
